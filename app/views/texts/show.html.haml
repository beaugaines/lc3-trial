%h1= @text.name
.row
  .col-md-7
    .text-content= @text.content
  .col-md-1
  .col-md-4
    %h3 Highlights/notes
    %section.highlights
      = render(@highlights) || content_tag(:p, 'You have not added any highlights for this text')

.modal.fade#highlight-form{role: "dialog", tabindex: "-1"}
  .modal-dialog{role: "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label": "Close", "data-dismiss": "modal", type: "button"}
          %span{"aria-hidden": "true"} Ã—
        %h4.modal-title Add highlight
      .modal-body
        = form_for [@text, Highlight.new], remote: true do |f|
          .form-group
            = f.label :content, class: 'sr-only'
            = f.hidden_field :content
            %blockquote.selected-text
          .form-group
            = f.label :notes
            = f.text_area :notes, class: 'form-control'
          = f.submit class: 'btn btn-primary'
          %button.btn.btn-default{"data-dismiss": "modal", type: "button"} Cancel
